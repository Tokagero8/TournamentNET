@model IEnumerable<TournamentNET.Models.Teams>

@{
    ViewBag.Title = "Index";
}

<h2>Team</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tournaments Name")
        </th>
        <th>
            @Html.DisplayName("Team Name")
        </th>
        <th>
            @Html.DisplayName("Ranking Position")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tournaments.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ranking)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.team_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.team_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.team_id })
        </td>
    </tr>
}

</table>
