@model IEnumerable<TournamentNET.Models.Tournaments>

@{
    ViewBag.Title = "Tournaments";
}

<h2>Tournament List</h2>

<p>
    @Html.ActionLink("Create New Tournament/Categories", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tournament name")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.tournament_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.tournament_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.tournament_id })
        </td>
    </tr>
}

</table>
