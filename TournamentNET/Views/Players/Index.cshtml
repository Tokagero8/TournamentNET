@model IEnumerable<TournamentNET.Models.Players>

@{
    ViewBag.Title = "Index";
}

<h2>Teams Player</h2>

<p>
    @Html.ActionLink("Create New Players", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Team")
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Teams.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.last_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.player_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.player_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.player_id })
        </td>
    </tr>
}

</table>
